<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!-- Mobile -->
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0" />

    <!-- Favicons -->
    <link rel="shortcut icon" href="favicon.ico">

    <!-- Mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />


    <script src="https://code.jquery.com/jquery-2.x-git.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" />
    <script src="http://code.jquery.com/ui/1.12.0/jquery-ui.min.js" integrity="sha256-eGE6blurk5sHj+rmkfsGYeKyZx3M4bG+ZlFyA7Kns7E=" crossorigin="anonymous"></script>
    @*<link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />*@
    

   
  @RenderSection("header",false)

</head>
<body>
    
    @Html.Partial("Menu")
    <div class="container-fluid" id="main-container" style="z-index:1">
        @RenderBody()
    @Html.Partial("Footer")
    </div>
    


    @RenderSection("scripts", required: false)  
    
    <script>
        $(document).ready(function () {
            // click off the menu to close it
            $('#main-container').click(function () {
                $("#mynav").removeClass("sidebar-show").addClass("sidebar-hide");
                $("#btn-open").fadeIn('slow');
            });

            // click on open menu to open it
            $("#btn-open").click(function (event) {
                event.preventDefault();
                $("#mynav").removeClass("sidebar-hide").addClass("sidebar-show");
                $("#btn-open").fadeOut('slow');
            });
            $(".links").click(function () {
                event.preventDefault();
                var type = $(this).data("name");
                $('body').animate({
                    scrollTop: $("#" + type).offset().top
                }, 1000)
            });
        
    })
    </script>

    <script src="~/Scripts/google.js"></script>
</body>

</html>
