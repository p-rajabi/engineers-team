    <div class="container" style="padding-top:20px" id="album">
    <div class="row ">
        <div class="carousel slide article-slide" id="article-photo-carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner cont-slider">
                <div class="item active">
                    <img alt="" title="" src="~/img/makets/maket-1.jpg" class="img-responsive">
                </div>
                <div class="item">
                    <img alt="" title="" src="~/img/makets/maket-7.jpg" class="img-responsive">
                </div>
                <div class="item">
                    <img alt="" title="" src="~/img/makets/maket-6.jpg" class="img-responsive">
                </div>
                <div class="item">
                    <img alt="" title="" src="~/img/makets/maket-2.jpg" class="img-responsive">
                </div>
            </div>
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li class="active" data-slide-to="0" data-target="#article-photo-carousel">
                    <img alt="" src="~/img/makets/maket-1.jpg" class="img-responsive">
                </li>
                <li class="" data-slide-to="1" data-target="#article-photo-carousel">
                    <img alt="" src="~/img/makets/maket-7.jpg">
                </li>
                <li class="" data-slide-to="2" data-target="#article-photo-carousel">
                    <img alt="" src="~/img/makets/maket-6.jpg">
                </li>
                <li class="" data-slide-to="3" data-target="#article-photo-carousel">
                    <img alt="" src="~/img/makets/maket-2.jpg">
                </li>

            </ol>
        </div>
    </div>
</div>



<script>
    // Stop carousel
    $('.carousel').carousel({
        interval: false
    });
    

</script>

