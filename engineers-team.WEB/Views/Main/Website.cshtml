                    </ul>

                    <div class="price">
                        <h2>با ما تماس بگیرید</h2>


                    </div>

                    <button type="button" class="btn btn-success">تماس با ما</button>
                    <br />
                  

                </div>

            </div>

        </div>
    </div>
   
</div>
<div class="container-fluid row" id="Samples">
  
        <div class="col-lg-4 col-lg-offset-4 text-center">
           
            <a href="@Url.Action("WebsiteSample","Main")" class="btn btn-primary btn-lg btn-block">نمونه کارها</a>
        </div>
  
</div>
@section scripts{
    <script>
        $(function () {
            $(".plan").hover(function () {
                console.log($("body").width());
                $(".plan").removeClass("firstScale");
            });
        });
    </script>

}
